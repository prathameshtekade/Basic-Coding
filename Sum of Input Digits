package exam;
import java.util.Scanner;

public class ArrayPractice {

	public static void main(String[] args) {
		int r,sum=0;
	System.out.println("Enter a Number");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
	while(n>0)
	{
		r=n%10;
		System.out.print(r);
		sum=sum+r;
		n=n/10;
	}
System.out.println("\nSum = "+sum);
	}

}
